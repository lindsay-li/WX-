/* pages/users/users.wxss */
.container{
  width: 100%;
  height: 100%;
}
.container .user{
  width: 90%;
  height: 126rpx;
  display: flex;
  align-items: center;
  margin: 20rpx auto;
}
.user .user_name{
  font-size: 14pt;
  font-weight: bold;
  color: #000;
}
.user image{
  width: 126rpx;
  height: 126rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.container .line{
  width: 100%;
  height: 10rpx;
  background-color: #eee;
  margin: 20rpx 0;
}
.container .title{
  width: auto;
  font-size: 12pt;
  color:#333;
  border-left: 6rpx solid #d81e06;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
  height: 12pt;
  line-height: 12pt;
}
.container .like,
.container .collection{
  width: 90%;
  height: auto;
  margin: 0 auto;
}
.btn{
  width: 240rpx;
  height: 68rpx;
  background-color: #d81e06;
  border-radius:10rpx; 
  color: #fff;
  text-shadow: 2rpx 2rpx 2rpx #361a6e;
  font-weight: bold;
  font-size: 14pt;
  line-height: 68rpx;
  margin-left:  60rpx;
}