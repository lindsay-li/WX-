/* pages/singer/singer.wxss */
@import "../page/newSong.wxss";
.wrapper{
    width: 100%;
    height: 100%;
}
.wrapper .img{
    width: 100%;
    height: 425rpx;
    background-color: #eee;
}
.wrapper .menu{
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: space-around;
    border-bottom: 1rpx solid #eee;
}
.menu .hotSong,
.menu .info{
    font-size: 12pt;
    color: #111;
    padding: 16rpx 0;
}
.wrapper .menu .redColor{
    color: #d81e06;
    border-bottom:4rpx solid #d81e06;
}
.scroll{
  width: 90%;
  height: 700rpx;
  margin: 0 auto;
}
.content{
    width: 95%;
    margin: 0 auto;
}
.content .title{
    font-size: 12pt;
    color: #000;
    padding: 15rpx 0;
}
.content .tit{
    font-size: 10pt;
    color: #666;
    line-height: 50rpx;
}