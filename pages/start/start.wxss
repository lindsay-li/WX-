/* pages/start/start.wxss */
.container{
    width: 100%;
    height: 100%;
}

#calendar {
    width: 98%;
    border: 2px solid #A4A7B0;
    height: 335px;
    margin-left: 0.5%;
}

.month {
    width: 92%;
    height: 48px;
    border: 2px solid #FFFFFF;
    margin-left: 3%;
    margin-top: 20px;
}

.month .ul {
    margin: 0;
    padding: 0;
    display: flex;
    margin-top: 11px;
    justify-content: space-between;
}

.year-month {
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.choose-year {
    padding: 0 20px;
    font-size: 16px;
    font-weight: 500;
}

.choose-month {
    text-align: center;
    font-size: 16px;
    font-weight: 500;
}

.arrow {
    width: 3%;
    height: 25px;
}

