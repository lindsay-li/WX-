.month .ul view {
    color: #999;
    font-size: 20px;
    text-transform: uppercase;
    letter-spacing: 3px;
    list-style: none;
}

.weekdays {
    margin: 0 auto;
    color: #FFFFFF;
    background: #A4A7B0;
    width: 96.6%;
    margin-top: 26px;
    height: 34px;
    line-height: 34px;
}

.weekdays view {
    display: inline-block;
    text-align: center;
    color: #11616f;
    font-size: 14px;
    font-weight: bold;
    width: 10%;
    margin-left: 34rpx;
}

.days {
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.days view {
    list-style-type: none;
    display: inline-block;
    width: 14.2%;
    text-align: center;
    padding-bottom: 3px;
    padding-top: 7px;
    font-size: 12.78px;
    color: #1597FA;
    font-weight: bold;
}

.days view text text {
    height: 29.5px;
    width: 27px;
    line-height: 29.5px;
    display: inline-block;
}

.active{
    color:#fff;
    font-weight: bold;
    background-color: #ff0101;
}
.days view .other-month {
    color: #ccc;
    height:59rpx;
    width:54rpx;
    line-height:59rpx;
    display:inline-block;

}
.text .title{
    font-size: 12pt;
    color: #003869;
    padding: 30rpx 20rpx;
    font-weight: 500;
}
.text .ttt{
    width: 90%;
    height: 180rpx;
    margin: 0 auto;
    border: 2rpx solid #ccc;
}
.text .bei{
    font-size: 12pt;
    color: #ff0101;
    padding: 30rpx 20rpx;
    font-weight: 500;
}
.text .btn{
    width: 130rpx;
    height: 55rpx;
    color: #fff;
    background-color: #1597FA;
    line-height: 55rpx;
    float: right;
    margin-right: 5%;
    font-size: 12pt;
}
.wrapper{
    width: 100%;
    height: 100%;
    background-color:  #003869 ;
}
.img{
    width: 500rpx;
    height: 500rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-80%);
}
.img img{
    width: 100%;
    height: 100%;
}
.tt{
    width: 100%;
    text-align: center;
    padding: 20rpx;
    font-size: 12pt;
    color: #fff;
}
.info{
    width: 100%;
    height: auto;
    padding: 20rpx 30rpx;
    font-size: 12pt;
    color: #111;
}
.titi{
    width: 90%;
    height: auto;
    margin: 20rpx 0 20rpx 30rpx;
    font-size: 12pt;
    color: #003869;
}