.box{
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #ccc;
    
}
.box .b-left{
    width:80%;
    height: 100%; 
    display: flex;
    align-items: center;
}
.box .b-right{
    width: 10%;
    height: 100%;
}
.b-left .arUrl{
    width: 100rpx;
    height:100rpx;
    margin:0 15rpx 0 5rpx; 
}
.b-left .arName{
    font-size: 12pt;
    color: #111;
}
.arName span{
    color: #666;
}