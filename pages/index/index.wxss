/**index.wxss**/
@import "../page/playlist.wxss";
@import "../page/artists.wxss";
@import "../page/newSong.wxss";
@import "../page/foote.wxss";
.container{
  width: 100%;
  height: auto;
  background-color: #F4F4F4;
}
.container .nav{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 10rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background-color: #F4F4F4;
}
.nav .tab{
  width: 70%;
  height: 100%;
  /* border-bottom: 1rpx solid #888; */
  display: flex;
}
.tab .hot,
.tab .t_search{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 70rpx;
  color: #111;
  font-size: 12pt;
  box-sizing: border-box;
}
.tab .hot1,
.tab .t_search1{
  color: #d81e06;
  border-bottom: 2rpx solid #d81e06;
}
.nav .logo{
  width: 60rpx;
  height: 60rpx;
}
.nav .logo1{
  animation: rotate 10s linear infinite;
}
@keyframes rotate {
  0%{transform: rotate(0deg);}
  100%{transform: rotate(360deg);}
}
/* .logo a{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
} */
.swip{
  margin-top: 70rpx;
}
.swip1{
  animation: fadeInLeft 0.7s linear;
}
@keyframes fadeInLeft{0%{opacity:0;transform:translate3d(-100%,0,0)}to{opacity:1;transform:none}}

.container .search{
  width: 90%;
  height: 75rpx;
  border-radius: 75rpx;
  color: #555;
  font-size: 10pt;
  display: flex;
  align-items: center;
  margin: 0 auto;
  background-color: #F4F4F4;
  position: relative;
}
.search image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 10px;
}
.search input{
  height: 100%;
  margin-left: 5px;
  width: 90%;
}
.container .song{
  width: 100%;
  height: auto;
}
.container .title{
  width: auto;
  font-size: 12pt;
  color:#333;
  border-left: 6rpx solid #d81e06;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
  height: 12pt;
  line-height: 12pt;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title image{
  width: 32rpx;
  height: 32rpx;
}
.new_s .scroll{
  width: 90%;
  height: 1290rpx;
  margin: 0 auto;
}
.wraper{
  background-color: #fdfdfd;
  margin-top: 70rpx;
  animation: fadeInRight 0.4s linear;
}
@keyframes fadeInRight{0%{opacity:1;transform:translate3d(100%,0,0)}to{opacity:1;transform:none}}
.wraper .tit{
  width: 100%;
  height: auto;
  font-size: 10pt;
  color: #555;
  padding: 30rpx 20rpx;
  border-top: 1rpx solid #E7E8EB; 
  margin-top: 50rpx;
}
.wraper .hot_tab{
  width: 90%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}
.hot_tab .hot_txt{
  width: auto;
  height: auto;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  border: 1rpx solid #E7E8EB;
  font-size: 11pt;
  color: #333;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.line{
  width: 100%;
  height: 1rpx;
  background-color: #E7E8EB;
  margin: 10rpx 0 50rpx;
}
.result{
  width: 100%;
  height: 100%;
  background-color: #fdfdfd;
  position: absolute;
  top: 230rpx;
}
.result .r-search{
  font-size: 12pt;
  color: #507DAF;
  width: auto;
  height: auto;
  padding: 35rpx 20rpx;
  border-top: 1rpx solid #E7E8EB;
  border-bottom: 1rpx solid #E7E8EB;
}
.result .s-name{
  width: 95%;
  height: auto;
  margin-left:20rpx ;
  font-size: 12pt;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E7E8EB;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap
}
.result image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 8px;
  position: relative;
  top: 7rpx; 
}
.s-name text:nth-child(2){
  color: #507DAF;
}
.s-name text:nth-child(3){
  font-size: 10pt;
  color: #777;
}
.s-name text:nth-child(4){
  font-size: 10pt;
  color: #777;
}
.collect .c-tit{
  font-size: 12pt;
  color: #777;
  margin-left: 20rpx;
}
.collect .c-list{
  width: 95%;
  height: auto;
  margin-left:20rpx ;
  font-size: 12pt;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E7E8EB;
  display: flex;
  align-items: center;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.c-list image{
  width:150rpx;
  height: 150rpx; 
  flex-shrink:0;
}
.c-list text{
  margin-left: 30rpx;
  color: #507DAF;
}